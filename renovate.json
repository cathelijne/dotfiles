{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended"
  ],

  "asdf": {
    "enabled": true,
    "fileMatch": [
      "(^|/)\\.tool-versions$",
      "(^|/)dot_tool-versions$",
      "(^|/)dot_tool-versions.tmpl$"
    ]
  },

  "packageRules": [
    {
      "groupName": "asdf dotfiles",
      "matchUpdateTypes": ["minor", "patch"],
      "matchManagers": ["asdf"],
      "matchFileNames": [
        "(^|/)dot_tool-versions$",
        "(^|/)dot_tool-versions.tmpl$"
      ],
      "matchCurrentVersion": "!/^0/",
      "ignoreTests": true,
      "automerge": true
    }
  ]
}
